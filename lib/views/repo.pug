doctype html
html
  include head.pug
  body
    h1
      a(href='/') /
    h2
      a(href=`/${repo}`)= repo
    a(href=`/${repo}/files`) files
    span &nbsp;&middot;&nbsp;
    a(href=`/-/api/${repo}.zip`) zip
    br
    a(href=`/${repo}?skip=${prev}`) newer
    span &nbsp;&middot;&nbsp;
    a(href=`/${repo}?skip=${next}`) older
    ul
      each c in commits
        li
          a(href=`/${repo}/commit/${c.hash}`)= c.message
          span  &mdash; #{c.author} &mdash; #{new Date(c.date).toLocaleString()}
